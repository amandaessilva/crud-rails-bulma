<div id="<%= dom_id product %>">
  <p>
    <strong>Produto: </strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Descrição: </strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Preço:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Disponível para venda: </strong>
    <%= product.available_for_sale ? 'Sim' : 'Não' %>
  </p>

</div>
