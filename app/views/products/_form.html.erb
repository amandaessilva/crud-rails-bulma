<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "textarea", cols: 5, rows: 10 %>
    <!-- Use class "textarea" for styling the text area -->
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class: "input" %>
  </div>

  <div>
    <%= form.label :available_for_sale, style: "display: block" %>
    <%= form.check_box :available_for_sale %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
